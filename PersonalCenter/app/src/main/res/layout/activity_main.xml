<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fcfcfc"
    android:fitsSystemWindows="false"

    tools:context="com.example.administrator.personalcenter.MainActivity">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#0ff">

            <ImageView
                android:id="@+id/iv_setting"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"

                android:layout_marginTop="14dp"
                android:padding="10dp"
                android:src="@drawable/wode_shezhi" />


            <LinearLayout
                android:id="@+id/ll_in"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"

                android:orientation="vertical">

                <com.example.administrator.personalcenter.view.CircleImageView
                    android:id="@+id/iv_userimg"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:civ_border_overlay="true"
                    app:civ_border_color="#f00"
                    app:civ_circle_background_color="#0f0"
                    app:civ_fill_color="#00f"
                    app:civ_border_width="2dp" />

                <TextView

                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="19sp" />

                <TextView
                    android:id="@+id/tv_usergrade"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:textSize="20sp" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_mylogin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/ll_in"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"

                android:text="登录/注册"
                android:textSize="20sp" />


        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/ll_usergrade"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/wode_jifen" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的积分"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/qianjin" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_usercollect"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/ll_usergrade"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/wode_shoucang" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的收藏"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/qianjin" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userindent"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/ll_usercollect"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/wode_dingdan" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的订单"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/qianjin" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_userpocket"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/ll_userindent"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/wode_koudai" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的口袋"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/qianjin" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_usercase"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/ll_userpocket"
                android:layout_marginTop="5dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/wode_bingli" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="我的病例"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/qianjin" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_site"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/ll_usercase"
                android:layout_marginTop="10dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView

                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="15dp"
                    android:src="@drawable/wode_dizhi" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="收货地址"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/qianjin" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/ll_withme"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_below="@id/ll_site"
                android:layout_marginTop="15dp"
                android:background="#fff"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:src="@drawable/wode_guanyu" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="关于我们"
                    android:textSize="20sp" />

                <ImageView

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:src="@drawable/qianjin" />


            </LinearLayout>


        </RelativeLayout>

        <Button
            android:id="@+id/but_backlogin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#0ff"
            android:text="退出登陆"
            android:textSize="20sp" />

        <Button
            android:id="@+id/but_etmake"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="#0ff"
            android:text="editext使用"

            />
    </LinearLayout>


</ScrollView>
